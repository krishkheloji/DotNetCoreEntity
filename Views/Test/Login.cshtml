@{
}
@model AuthUser

<form method="post">
    Email <input type="text" asp-for="auth.Email" class="form-control"/>
    <span asp-validation-for="auth.Email" class="text-danger"></span><br />


    Password <input type="password" asp-for="auth.Password" class="form-control" />
    <span asp-validation-for="auth.Password" class="text-danger"></span><br />

    Salary <input type="text" asp-for="auth.Salary" class="form-control" />
    <span asp-validation-for="auth.Salary" class="text-danger"></span><br />

    <input type="submit" value="Login"/>
</form>

<p class="text-danger">@ViewBag.msg</p>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var x in Model.user)
        {
            <tr>
                <th scope="row">@x.Name</th>
                <td>@x.Contact</td>

            </tr>
        }


    </tbody>
</table>

@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}